<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class='row'>
    <div class='col-md-6 col-md-offset-3 text-center'>
      <div class='form-group'>
        <%= f.label :email, t('.email') %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control text-center' %>
      </div>

      <div class='form-group'>
        <%= f.label :full_name, t('.full_name') %>
        <%= f.text_field :full_name, class: 'form-control text-center' %>
      </div>

      <div class='form-group'>
        <%= f.label :password, t('.password') %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('.character_min') %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control text-center' %>
      </div>

      <div class='form-group'>
        <%= f.label :password_confirmation, t('.password_confirmation') %><br />
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control text-center' %>
      </div>

      <div class='actions'>
        <%= f.submit t('.submit'), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
